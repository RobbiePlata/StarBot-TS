{
  "compilerOptions": {
      "moduleResolution": "node",
      "module": "commonjs",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "rootDir": "src",
      "outDir": "lib",
        "declaration": true,
        "lib": ["es6", "dom"],
        "target": "es6",
      "sourceMap": true,
  },
  "include": [
      "**/*"
    ],
    "exclude": [
      "assets",
      "node_modules",
      "bower_components",
      "jspm_packages"
    ],
    "typeAcquisition": {
      "enable": true
    }
} 